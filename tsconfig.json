{
  "compilerOptions": {
    "outDir": "./tmp/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./node_modules",
    "types": [
    ]
  },
  "include": [
    "node_modules/@types/**/index.d.ts",
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "dist",
    "TPs/",
    "__tests__/__mocks__/**/*"
  ]
}